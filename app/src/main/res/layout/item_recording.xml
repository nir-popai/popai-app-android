<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/recordingDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dec 12, 2025 2:30 PM"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <TextView
                android:id="@+id/recordingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPLOADED"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/status_badge"/>

        </LinearLayout>

        <!-- Duration and chunks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/recordingDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: 45:30"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/recordingChunks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chunks: 5"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>

        </LinearLayout>

        <!-- Upload progress -->
        <LinearLayout
            android:id="@+id/uploadProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/uploadProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Uploaded: 3/5"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"/>

            <TextView
                android:id="@+id/failedChunks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Failed: 1"
                android:textSize="13sp"
                android:textColor="@color/error"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Error message -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload failed"
            android:textSize="13sp"
            android:textColor="@color/error"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <!-- Retry button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry Upload"
            android:textSize="13sp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
